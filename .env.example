DEFAULT_IMAGE_QUALITY=95
MAX_IMAGE_SIZE=1920x1080

# Platform Specifications
WHATSAPP_DIMENSIONS=1080x1080
TWITTER_DIMENSIONS=1200x675
DISCORD_DIMENSIONS=1920x1080
GENERAL_DIMENSIONS=1920x1080

# Development Settings (optional)
DEBUG=false
MOCK_AWS_SERVICES=false